<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="items.xsd">

	<!--Relazione n-n tra ricetta ed ingrediente -->
	<reletions>
		<relation localized="false" code="doseRelation">
			<deployment table="dose" typecode="10500" />
			<sourceElement qualifier="ricetta" type="Ricetta"
				cardinality="many">
				<modifiers optional="false" />
			</sourceElement>
			<targetElement qualifier="ingrediente" type="Ingrediente"
				cardinality="many">
				<modifiers optional="false" />
			</targetElement>
		</relation>
	</reletions>
	<itemtypes code="ricetta">
		<attributes>
			<attribute qualifer="id" type="java.lang.Integer">
				<modifiers optional="true" />
				<persistence type="property" />
			</attribute>
			<attribute qualifer="nome" type="java.lang.String">
				<modifiers optional="true" />
			</attribute>
			<attribute qualifer="tempoCottura" type="java.lang.Integer">
			</attribute>
			<attribute qualifer="portata" type="java.lang.String"></attribute>
			<attribute qualifer="calorie" type="java.lang.Integer"></attribute>
			<attribute qualifer="paeseProvenienza" type="java.lang.String"></attribute>
		</attributes>
	</itemtypes>
	<itemtypes code="ingrediente">
		<attributes>
			<attribute qualifer="nome" type="java.lang.String">
				<modifiers optional="true" />
				<persistence type="property" />
			</attribute>
			<attribute qualifer="provenienza" type="java.lang.String">
				<modifiers optional="true" />
			</attribute>
			<attribute qualifer="tipo" type="java.lang.String"></attribute>
		</attributes>
	</itemtypes>
	<itemtypes code="dose">
		<attributes>
			<attribute qualifer="quantita" type="java.lang.String">
				<modifiers optional="true" />
			</attribute>
		</attributes>
		<indexes>
			<index name="indici" unique="true">
				<key attribute="source"></key>
				<key attribute="target"></key>
			</index>
		</indexes>
	</itemtypes>
</items>
